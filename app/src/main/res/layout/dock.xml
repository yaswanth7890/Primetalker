<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="#121212"
    android:gravity="center"
    android:weightSum="4"
    android:paddingHorizontal="8dp">

    <!-- Chats Icon -->
    <LinearLayout
        android:id="@+id/dock_chats_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/dock_chats_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chat_img"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Translate Icon -->
    <LinearLayout
        android:id="@+id/dock_translate_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/dock_translate_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/translate_img"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translate"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Calls Icon -->
    <LinearLayout
        android:id="@+id/dock_calls_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/dock_calls_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/call_img"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calls"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Settings Icon -->
    <LinearLayout
        android:id="@+id/dock_settings_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/dock_settings_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/settings_img"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
