<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#101010">

    <TextView
        android:id="@+id/txtCallerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caller"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtCallTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/txtCallerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/langLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Spinner
            android:id="@+id/spinnerSourceLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown" />

        <Spinner
            android:id="@+id/spinnerTargetLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Remote video container -->
    <FrameLayout
        android:id="@+id/remoteVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/langLayout"
        android:layout_marginTop="16dp"
        android:background="#000000" />

    <!-- Local video container (small preview) -->
    <FrameLayout
        android:id="@+id/localVideoContainer"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_alignEnd="@id/remoteVideoContainer"
        android:layout_alignRight="@id/remoteVideoContainer"
        android:layout_alignTop="@id/remoteVideoContainer"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="#222222" />


    <TextView
        android:id="@+id/txtCaptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="196dp"
        android:background="#66000000"
        android:gravity="center"
        android:padding="8dp"
        android:text="..."
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnEndCall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#F44336"
            android:contentDescription="End Call"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageButton
            android:id="@+id/btnMute"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#333333"
            android:contentDescription="Mute / Unmute"
            android:src="@drawable/ic_mic_on" />

        <ImageButton
            android:id="@+id/btnSpeaker"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#333333"
            android:contentDescription="Speaker On/Off"
            android:src="@android:drawable/ic_lock_silent_mode_off" />

        <ImageButton
            android:id="@+id/btnUpgradeToVideo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#3F51B5"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="Toggle Video"
            android:elevation="8dp" />

    </LinearLayout>

</RelativeLayout>
